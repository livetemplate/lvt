{{`<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Authentication</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    {{if .lvt.DevMode}}
    <script src="/livetemplate-client.js"></script>
    {{else}}
    <script src="https://unpkg.com/@livetemplate/client@latest/dist/livetemplate-client.browser.js"></script>
    {{end}}
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    {{ if eq .View "register" }}Create your account{{ else if eq .View "forgot" }}Reset your password{{ else }}Sign in to your account{{ end }}
                </h2>
            </div>

            {{ if .FlashError }}
            <div class="rounded-md bg-red-50 p-4">
                <div class="flex">
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">{{ .FlashError }}</h3>
                    </div>
                </div>
            </div>
            {{ end }}

            {{ if .FlashSuccess }}
            <div class="rounded-md bg-green-50 p-4">
                <div class="flex">
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-green-800">{{ .FlashSuccess }}</h3>
                    </div>
                </div>
            </div>
            {{ end }}

            {{ if eq .View "login" }}
            <!-- Password Login Form - uses HTTP POST because cookies can't be set over WebSocket -->
            {{ if .ShowPassword }}
            <form class="mt-8 space-y-6" action="/auth/login" method="POST">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        <label for="login-email" class="sr-only">Email address</label>
                        <input id="login-email" name="email" type="email" required
                               class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Email address" value="{{ .Email }}">
                    </div>
                    <div>
                        <label for="login-password" class="sr-only">Password</label>
                        <input id="login-password" name="password" type="password" required
                               class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Password">
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Sign in with password
                    </button>
                </div>

                <div class="flex items-center justify-between text-sm">
                    <button type="button" lvt-click="SwitchToRegister"
                            class="font-medium text-indigo-600 hover:text-indigo-500">
                        Create account
                    </button>
                    <button type="button" lvt-click="SwitchToForgot"
                            class="font-medium text-indigo-600 hover:text-indigo-500">
                        Forgot password?
                    </button>
                </div>
            </form>
            {{ end }}

            <!-- Magic Link Form - separate form with lvt-submit to send email -->
            {{ if .ShowMagicLink }}
            <form class="mt-4 space-y-4" lvt-submit="MagicLink">
                <div class="rounded-md shadow-sm">
                    <div>
                        <label for="magic-email" class="sr-only">Email address</label>
                        <input id="magic-email" name="email" type="email" required
                               class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Email for magic link" value="{{ .Email }}">
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Send magic link
                    </button>
                </div>
            </form>
            {{ end }}

            {{ else if eq .View "register" }}
            <!-- Registration Form -->
            <form class="mt-8 space-y-6" lvt-submit="Register">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div>
                        <label for="email" class="sr-only">Email address</label>
                        <input id="email" name="email" type="email" required
                               class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Email address" value="{{ .Email }}">
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input id="password" name="password" type="password" required
                               class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Password (min 8 characters)" value="{{ .Password }}">
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Create account
                    </button>
                </div>

                <div class="text-sm text-center">
                    <button type="button" lvt-click="SwitchToLogin"
                            class="font-medium text-indigo-600 hover:text-indigo-500">
                        Already have an account? Sign in
                    </button>
                </div>
            </form>

            {{ else if eq .View "forgot" }}
            <!-- Forgot Password Form -->
            <form class="mt-8 space-y-6" lvt-submit="ForgotPassword">
                <div class="rounded-md shadow-sm">
                    <div>
                        <label for="email" class="sr-only">Email address</label>
                        <input id="email" name="email" type="email" required
                               class="appearance-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                               placeholder="Email address" value="{{ .Email }}">
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Send reset link
                    </button>
                </div>

                <div class="text-sm text-center">
                    <button type="button" lvt-click="SwitchToLogin"
                            class="font-medium text-indigo-600 hover:text-indigo-500">
                        Back to sign in
                    </button>
                </div>
            </form>
            {{ end }}
        </div>
    </div>
</body>
</html>
`}}