apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ .ProjectName }}-pvc
  namespace: {{ .Namespace }}
  labels:
    app: {{ .ProjectName }}
    managed-by: lvt
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: 10Gi
  # Uncomment and specify storage class if needed
  # storageClassName: standard
