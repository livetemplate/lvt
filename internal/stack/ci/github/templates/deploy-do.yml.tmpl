name: Deploy DigitalOcean

on:
  push:
    branches: [ main ]
  workflow_dispatch:

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.22'
          cache: true

      - name: Run tests
        run: go test -v ./...

      - name: Run linting
        uses: golangci/golangci-lint-action@v4
        with:
          version: latest

      - name: Install doctl
        uses: digitalocean/action-doctl@v2
        with:
          token: ${{`{{ secrets.DIGITALOCEAN_ACCESS_TOKEN }}`}}

      - name: Update App Spec
        run: |
          doctl apps update ${{`{{ secrets.DO_APP_ID }}`}} --spec deployment/app-spec.yaml

      - name: Deploy to DigitalOcean App Platform
        run: |
          doctl apps create-deployment ${{`{{ secrets.DO_APP_ID }}`}} --wait

      - name: Get deployment info
        run: |
          doctl apps get ${{`{{ secrets.DO_APP_ID }}`}} --format ID,Spec.Name,DefaultIngress,ActiveDeployment.ID

      - name: Check app logs
        run: |
          doctl apps logs ${{`{{ secrets.DO_APP_ID }}`}} --type=run --follow=false
        if: failure()
